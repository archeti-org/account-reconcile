<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record
        id="view_account_payment_form_inherit_account_partner_reconcile"
        model="ir.ui.view"
    >
        <field
            name="name"
        >account.payment.form.inherit.account_partner_reconcile</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    class="oe_stat_button"
                    type="object"
                    name="action_open_manual_partner_reconciliation_widget"
                    attrs="{'invisible': ['|', '|', ('partner_type', '!=', 'customer'), ('is_reconciled', '=', True), ('state', '!=', 'posted')]}"
                    context="{'reconcile_mode': 'customers'}"
                    icon="fa-usd"
                    string="Match Receivables"
                >
                </button>
                <button
                    class="oe_stat_button"
                    type="object"
                    name="action_open_manual_partner_reconciliation_widget"
                    attrs="{'invisible': ['|', '|', ('partner_type', '!=', 'supplier'), ('is_reconciled', '=', True), ('state', '!=', 'posted')]}"
                    context="{'reconcile_mode': 'suppliers'}"
                    icon="fa-usd"
                    string="Match Payables"
                >
                </button>
            </xpath>
        </field>
    </record>
</odoo>
